@using SFA.DAS.EarlyConnect.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers 
@model SFA.DAS.EarlyConnect.Web.ViewModels.GetAdvisorViewModel
@{
    ViewBag.Title = "Get an apprenticeship adviser";
}

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form asp-route="@RouteNames.GetAnAdviserUCAS_Post" asp-route-studentSurveyId="@Model.StudentSurveyId" novalidate>
                @Html.HiddenFor(model => model.Email)
                @Html.HiddenFor(model => model.IsCheck)
                @Html.HiddenFor(model => model.IsOther)
                <h1 class="govuk-heading-xl">Get an apprenticeship adviser</h1>
                <p class="govuk-body">
                    Get matched with the right adviser. We’ll also ask you a few questions to help your adviser give
                    you the right support.
                </p>
                <p class="govuk-body">
                    You should be done in less than 5 minutes.
                </p>

                <button type="submit" class="govuk-button govuk-button--start" esfa-automation="continue-button">
                    Start now
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                    </svg>
                </button>
            </form>

        </div>
    </div>
</main>