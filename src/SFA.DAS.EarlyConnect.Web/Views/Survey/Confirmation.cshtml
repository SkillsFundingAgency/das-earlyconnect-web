@{
    ViewBag.Vpv = "/survey/confirmation";
    ViewBag.Title = "Details sent to our team";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    Details sent to our team
                </h1>
                <div class="govuk-panel__body">
                    You’ll hear from an adviser soon
                </div>
            </div>

            <h2 class="govuk-heading-m govuk-!-margin-top-9">What happens next</h2>
            <p class="govuk-body">We’ve shared your information with the team in your area.</p>
            <p class="govuk-body">An adviser will be in contact within 3 working days.</p>

            <h2 class="govuk-heading-m govuk-!-margin-top-7">Other resources</h2>
            <p class="govuk-body">
                Find out more about <a href="https://www.gov.uk/become-apprentice" class="govuk-link">how apprenticeships work and what you’ll get</a>.
            </p>
            <p class="govuk-body">You can search and apply for apprenticeships in England on <a href="https://www.gov.uk/apply-apprenticeship" class="govuk-link">Find an apprenticeship</a>.</p>
        </div>
    </div>
</main>

